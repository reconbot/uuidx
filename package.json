{
  "name": "uuid-basex",
  "version": "0.0.0-development",
  "description": "Base-xx UUID generator",
  "types": "dist/index.d.ts",
  "exports": {
    "require": "./dist/index.js",
    "default": "./dist/index-esm.mjs",
    "types": "./dist/index.d.ts"
  },
  "engines": {
    "node": "^12.22 || ^14.13 || >=16"
  },
  "repository": "git@github.com:reconbot/uuidx.git",
  "homepage": "https://github.com/reconbot/uuidx",
  "scripts": {
    "test": "mocha",
    "lint": "tsc && eslint lib/*.ts",
    "docs": "typedoc --out docs --excludePrivate lib/index.ts",
    "format": "eslint lib/*.ts --fix",
    "clean": "rm -rf dist-ts dist",
    "build": "npm run clean && tsc -p tsconfig-build.json && rollup -c && ts-eager bundle-types",
    "prepublishOnly": "npm run build",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "uuid encoder",
    "uuid",
    "uid",
    "base62",
    "unique",
    "id",
    "identifier",
    "url-friendly",
    "generator",
    "base64"
  ],
  "author": "Francis Gulotta <wizard@roborooter.com>",
  "license": "MIT",
  "dependencies": {
    "base-x": "^3.0.8",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.16.1",
    "@types/chai": "^4.2.19",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.12.4",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "chai": "^4.3.4",
    "eslint": "^7.29.0",
    "mocha": "^9.0.1",
    "rollup": "^2.52.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "semantic-release": "^17.4.4",
    "ts-eager": "^2.0.2",
    "typedoc": "^0.21.0",
    "typescript": "^4.3.4"
  },
  "mocha": {
    "bail": true,
    "require": [
      "ts-eager/register",
      "chai/register-assert"
    ],
    "spec": "lib/*-test.ts"
  }
}
